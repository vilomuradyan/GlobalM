<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/background_item_stream"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp"
    tools:ignore="ContentDescription, UnusedAttribute">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="6dp"
            android:id="@+id/image_contact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_grey"
            android:background="@drawable/ic_background_avatar"
            android:padding="12dp"
            android:tint="@color/color_main_blue"
            android:src="@drawable/ic_avatar" />

        <TextView
            android:id="@+id/image_notification"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="end"
            android:background="@drawable/selector_rounded_button_grey"
            android:backgroundTint="@android:color/holo_red_light"
            android:gravity="center"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="8sp" />


    </FrameLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lester Arnold"
            android:textColor="@android:color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_members_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_channel_name" />

    </RelativeLayout>

    <ImageView

        android:padding="8dp"
        android:tint="@color/color_green"
        android:id="@+id/button_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_green"
        android:src="@drawable/ic_add_users"
        android:background="@drawable/ic_background_add_users" />

    <!--<ImageView-->
        <!--android:tint="@android:color/black"-->
        <!--android:id="@+id/button_options"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/selector_rounded_button_white"-->
        <!--android:padding="8dp"-->
        <!--android:src="@drawable/ic_dots" />-->

</LinearLayout>