<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:ignore="ContentDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ContentDescription">

            <LinearLayout
                android:id="@+id/button_dashboard"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/selector_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_dashboard"
                    android:tint="@color/color_main_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dashboard"
                    android:textColor="#444444"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_summary"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/selector_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_summary"
                    android:tint="@color/color_main_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/content"
                    android:textColor="#444444"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_users"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/selector_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_contact_white"
                    android:tint="@color/color_main_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/users"
                    android:textColor="#444444"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_go_live"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/selector_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_go_live"
                    android:tint="@color/color_main_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/go_live"
                    android:textColor="#444444"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_event"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/selector_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_plan_event"
                    android:tint="@color/color_main_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/event"
                    android:textColor="#444444"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_upload"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/selector_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_upload_blue"
                    android:tint="@color/color_main_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/upload"
                    android:textColor="#444444"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/button_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_button_white"
            android:padding="10dp"
            android:src="@drawable/ic_settings" />

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_rounded_button_stroke_blue"
            android:padding="16dp"
            android:src="@drawable/ic_contact_selected" />

        <ImageView
            android:id="@+id/button_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_button_white"
            android:padding="10dp"
            android:src="@drawable/ic_logout" />

    </RelativeLayout>

</RelativeLayout>